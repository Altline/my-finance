<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Label"></style>

    <style name="Label.Centered" parent="Label">
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Category">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Category.Large" parent="Category">
        <item name="android:textSize">@dimen/textsize_huge</item>
    </style>

    <style name="Party">
        <item name="android:textSize">@dimen/textsize_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Pickbutton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:drawableEnd">@drawable/ic_baseline_arrow_forward_ios_24</item>
        <item name="drawableTint">?attr/colorSecondary</item>
        <item name="strokeColor">@color/green_light</item>
        <item name="strokeWidth">@dimen/pickbutton_stroke</item>
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="StatValue">
        <item name="android:textAlignment">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="StatCard">
        <item name="cardCornerRadius">@dimen/stat_card_corner_radius</item>
        <item name="cardElevation">@dimen/stat_card_elevation</item>
        <item name="android:layout_margin">@dimen/stat_card_margin</item>
    </style>

    <style name="ChartCard">
        <item name="cardCornerRadius">@dimen/chart_card_corner_radius</item>
        <item name="cardElevation">@dimen/chart_card_elevation</item>
        <item name="android:layout_margin">@dimen/chart_card_margin</item>
    </style>

</resources>